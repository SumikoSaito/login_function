<div class="container">

  <h1>ブログ一覧</h1>

  <% @blogs.each do |blog| %>
  <div class="blog-panel">
    <h2><%= blog.title %></h2>
    <p><%= blog.content %></p>
      <div class="blog-links">


        <%= link_to '詳細を確認する', blog_path(blog.id), class: 'btn btn-info'%>
        <% if blog.user == current_user %>
          <%= link_to "ブログを編集する", edit_blog_path(blog.id), data: { confirm: '本当に編集していいですか？' }, class: 'btn btn-success'%>
          <%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-warning'%>
        <% end %>
      </div>
  </div>
  <% end %>

</div>
